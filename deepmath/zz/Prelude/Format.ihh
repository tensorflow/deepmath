#if (__cplusplus >= 201103L)

inline void formattedWrite_rec(Out& out, cchar*& fmt){ writeUntilFormatChar(fmt, out); }

template<class T, typename... Args>
void formattedWrite_rec(Out& out, cchar*& fmt, T const& t, Args&&... args){
    writeUntilFormatChar(fmt, out);
    applyFormat(fmt, out, t);
    formattedWrite_rec(out, fmt, forward<Args>(args)...);
}


template<typename... Args>
void formattedWrite(Out& out, cchar* fmt, Args&&... args) {
    formattedWrite_rec(out, fmt, forward<Args>(args)...);
    assert(*fmt == 0 && "---FORMAT--- Fewer arguments than '%_'s");
}


