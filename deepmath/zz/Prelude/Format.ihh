// Miscellaneous:


template<class STR, class VEC>
void joiner(const STR& sep, const VEC& fields, Out& out = std_out)
{
    if (fields.size() == 0)
        return;

    write_(out, fields[0]);
    for (uind i = 1; i < fields.size(); i++){
        write_(out, sep);
        write_(out, fields[i]);
    }
}

template<class STR, class VEC>
struct Join {
    STR const& sep;
    VEC const& elems;
    Join(STR const& sep, VEC const& elems) : sep(sep), elems(elems) {}
};


template<class STR, class VEC>
inline Join<STR,VEC> join(STR const& sep, VEC const& elems){
    return Join<STR,VEC>(sep, elems); }

template<class STR, class VEC> macro void write_(Out& out, const Join<STR,VEC>& v) {
    joiner(v.sep, v.elems, out); }


