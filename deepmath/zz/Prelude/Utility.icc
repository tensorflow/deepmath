// Windows compatibility:


// This hack does exactly what 'dirname' does under Linux. Don't ask me why this behavior is
// desirable.
String dirName(const String& str)
{
    if (!has(str, '/'))
        return ".";
    else if (str == "//")
        return str;

    uind i = str.size();
    while (i > 1 && str[i-1] == '/') i--;

    for (; i > 0;){ i--;
        if (str[i] == '/'){
            if (i == 1 && str[0] == '/')
                return "//";

            while (i > 1 && str[i-1] == '/') i--;
            if (i == 0)
                return "/";
            else
                return str.sub(0, i);
        }
    }

    return ".";
}


// Same story as for 'dirName()' above.
String baseName(const String& str)
{
    if (str == "")
        return ".";

    uind i = str.size();
    while (i > 1 && str[i-1] == '/') i--;
    uind end = i;

    for (; i > 0;){ i--;
        if (str[i] == '/'){
            if (i+1 == end)
                return "/";
            else
                return str.sub(i+1, end);
        }
    }

    return str.sub(0, end);
}


char* getcwd(char* buf, size_t size)
{
    char* dir = _getcwd(buf, size);
    if (dir){
        for (char* p = dir; *p; p++)
            if (*p == '\\')
                *p = '/';
    }

    return dir;
}


