TArgs inline void wrLn(cchar* fmt, DArgs) { ZZ_Scoped_Lock(console); formattedWrite(std_out, fmt, FArgs); std_out += '\n'; std_out.flush(); }
inline       void newLn()                 { ZZ_Scoped_Lock(console); std_out += '\n'; std_out.flush(); }

// Stderr, locking, flushing
TArgs inline void shout  (cchar* fmt, DArgs) { ZZ_Scoped_Lock(console); formattedWrite(std_err, fmt, FArgs); std_err.flush(); }
TArgs inline void shoutLn(cchar* fmt, DArgs) { ZZ_Scoped_Lock(console); formattedWrite(std_err, fmt, FArgs); std_err += '\n'; std_err.flush(); }

// Stdout, no-locking, flushing
TArgs inline void wr_quick  (cchar* fmt, DArgs) { formattedWrite(std_out, fmt, FArgs); }
TArgs inline void wrLn_quick(cchar* fmt, DArgs) { formattedWrite(std_out, fmt, FArgs); std_out += '\n'; }
inline void       newLn_quick()                 { std_out += '\n'; }

// Stream, flushing
TArgs inline void wr_flush  (Out& out, cchar* fmt, DArgs) { formattedWrite(out, fmt, FArgs); out.flush(); }
TArgs inline void wrLn_flush(Out& out, cchar* fmt, DArgs) { formattedWrite(out, fmt, FArgs); out += '\n'; out.flush(); }
inline void       newLn_flush(Out& out)                   { out += '\n'; out.flush(); }

// Format to 'String':
TArgs String fmt(cchar* fmt, DArgs) { String out; wr(out, fmt, FArgs); return out; }

#undef TArgs
#undef DArgs
#undef FArgs

#endif


