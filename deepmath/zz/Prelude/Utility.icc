// Printing strings and numbers as text:


void printUInt(Out& out, uint64 x)
{
    if (x == 0)
        out.push('0');

    else{
        char buf[20];
        uint sz = 0;
        while (x != 0){
            buf[sz++] = '0' + uchar(x % 10);
            x /= 10; }

        for (uint i = sz; i > 0;) i--,
            out.push(buf[i]);
    }
}


void printInt(Out& out, int64 x)
{
    if (x < 0){
        out.push('-');
        x = -x; }

    printUInt(out, x);
}


